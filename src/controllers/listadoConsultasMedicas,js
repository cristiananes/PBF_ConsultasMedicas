const express = require('express');
const bodyParser = require('body-parser');

const app = express();
const port = 3000;

app.use(bodyParser.json());

let consultas = []; // Array para almacenar las consultas

// Endpoint para crear una consulta
app.post('/api/consultas', (req, res) => {
    const { titulo, descripcion, foto, especialidad, medico, gravedad, usuario } = req.body;

    const especialidadesValidas = [
        'Traumatologo', 'Oculista', 'Otorrino', 'Pediatra',
        'Cardiologo', 'Urologo', 'Ginecologo', 'Odontologo',
        'Neumologo', 'Dermatologo', 'Fisioterapeuta'
    ];

    if (!especialidadesValidas.includes(especialidad)) {
        return res.status(400).json({ mensaje: 'Especialidad no vÃ¡lida' });
    }

    const nuevaConsulta = {
        id: consultas.length + 1,
        titulo,
        descripcion,
        foto,
        especialidad,
        medico,
        gravedad,
        fecha: //falta//
        usuario,
        respuestas: [] // Inicialmente, sin respuestas
    };

    consultas.push(nuevaConsulta);
    res.status(201).json({ mensaje: 'Consulta creada exitosamente', consultaId: nuevaConsulta.id });
});

// Endpoint para obtener el historial de consultas
app.get('/api/consultas/:usuario', (req, res) => {
    const { usuario } = req.params;

    // Filtrar consultas por usuario
    const consultasUsuario = consultas.filter(consulta => consulta.usuario === usuario);

    res.status(200).json(consultasUsuario);
});

app.listen(port, () => {
    console.log(`Servidor escuchando en http://localhost:${port}`);
});